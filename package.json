{
  "name": "cleissonom-dev",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "prepare": "husky",
    "precommit:lint": "lint-staged",
    "precommit:secrets": "gitleaks git --staged --redact --config .gitleaks.toml",
    "precommit:checks": "npm run precommit:secrets && npm run precommit:lint"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "next": "^16.1.6",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "eslint": "^10.0.0",
    "eslint-config-next": "^16.1.6",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --max-warnings=0 --no-warn-ignored --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx,css,scss,html,yml,yaml}": [
      "prettier --write"
    ]
  }
}
